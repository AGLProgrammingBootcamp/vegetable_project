<%- model_class = Agriuser -%>
<div class="page-header">
  <h1>生産者情報</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @agriuser.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @agriuser.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:likescounter) %>:</strong></dt>
  <dd><%= @agriuser.likescounter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vegitable1) %>:</strong></dt>
  <dd><%= @agriuser.vegitable1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vegitable2) %>:</strong></dt>
  <dd><%= @agriuser.vegitable2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vegitable3) %>:</strong></dt>
  <dd><%= @agriuser.vegitable3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @agriuser.comment %></dd>
</dl>

<dl class="dl-horizontal">
<%= link_to "一覧",agriusers_path, :class => 'btn btn-default'  %>
<%= link_to "編集", edit_agriuser_path(@agriuser), :class => 'btn btn-default' %>
<%= link_to "削除",
              agriuser_path(@agriuser),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</dl>
